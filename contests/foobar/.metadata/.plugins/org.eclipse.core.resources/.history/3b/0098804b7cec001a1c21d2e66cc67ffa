public class Solution {
	private static int xorToN(int n) {
		switch (n % 4) {
		case 0:
			return n;
		case 1:
			return 1;
		case 2:
			return n+1;
		default:
			return 0;
		}
	}
	
	private static int xorMToN(int m, int n) {
		return xorToN(m) ^ xorToN(n);
	}
	
    public static int solution(int start, int length) {
    	int result = 0, cur = start;
    	
    	for (int i = length; i >= 1; i--) {
    		result ^= xorMToN(cur, cur + i);
    		cur += length;
    	}
    	
    	return result;
    }
}